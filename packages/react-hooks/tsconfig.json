{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "rootDir": "src",
    "jsx": "react",
    "jsxFactory": "createType",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
